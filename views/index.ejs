<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Chat-IUDigital</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>

  <div class="container-fluid chat-container">
    <div id="loaders">
    </div>
    <div class="messages" id="chatMessages">
      
      <div class="message-1 bot">
        <img src="/isotipo-57x57.png" class="img img-rounded img-fluid"/>
        <%= message %>
      </div>
    </div>
    <form onsubmit="return false;">
    <!-- Input area -->
    <div class="input-area">
      <input type="text" id="userInput" placeholder="Escribe un mensaje..." />
      <button id="buttonSend" onclick="sendMessage()">
        <i class="fa-solid fa-paper-plane"></i>
      </button>
      <button id="buttonLoading" class="btn btn-primary" type="button" disabled>
        <span class="spinner-grow spinner-grow-sm" aria-hidden="true"></span>
        <span class="visually-hidden" role="status">Loading...</span>
      </button>
    </div>
    </form>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>

  <script>
    var htmlString = `<%- image.replace(/"/g, '\\"').replace(/\n/g, '') %>`;
     var courseId = `<%- courseId.replace(/"/g, '\\"').replace(/\n/g, '') %>`;
     var name = `<%- name.replace(/"/g, '\\"').replace(/\n/g, '') %>`;
     var contextId = `<%- contextId.replace(/"/g, '\\"').replace(/\n/g, '') %>`;
     var studentId = `<%- studentId.replace(/"/g, '\\"').replace(/\n/g, '') %>`;
     var studentIdCanvas = `<%- studentIdCanvas.replace(/"/g, '\\"').replace(/\n/g, '') %>`;
     var baseUrl = `<%- baseUrl.replace(/"/g, '\\"').replace(/\n/g, '') %>`;
     var secret = `<%- secret.replace(/"/g, '\\"').replace(/\n/g, '') %>`;
     var contextTitle = `<%- contextTitle.replace(/"/g, '\\"').replace(/\n/g, '') %>`;
     window.onload = function() {
      if (typeof marked !== 'undefined') {
        window.markedFunction = marked;
      } else {
        console.error('Marked no est√° disponible');
      }
    }
  </script>

  <script src="/js/axios.min.js"></script>
 
  <script src="/js/script.js"></script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
